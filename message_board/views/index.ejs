<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container-fluid">
        <h2>message board</h2><hr>
        <form action="/message" method="post" class="form">
            <div class="form-group">
            <label for="username">Name:</label>
            <input type="text" name="username">
            </div>
            <div class="form-group">
                <label for="message">Message:</label>
                <input type="text" name="message">
            </div>
            <div class="form-group">
                <input type="submit" value="post message" class="btn btn-primary">
            </div>
        </form>
        <hr>
        <% for (var x in message) { %>
            <div id="message" class="message">
                <h4>message</h4>
                <p>name: <%= message[x].username %></p>
                <p>message: <%= message[x].message %></p>
                <h5>comments</h5>
                <% for (var i = 0; i < message[x].comments.length; i++) { %>
                <p>name: <%= message[x].comments[i].username %></p>
                <p>comment: <%= message[x].comments[i].text %></p>
                <% } %>
                <form action="/comment/<%= message[x].id %>" method="post" class="form">
                    <div class="form-group">
                    <label for="username">name:</label>
                    <input type="text" name="username">
                    </div>
                    <div class="form-group">
                        <label for="text">comment:</label>
                        <input type="text" name="text">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="comment" class="btn btn-primary">
                    </div>
                </form>
            </div>
            <hr>
        <% } %>
        <% if(typeof(errors) != 'undefined') { %>
            <% for (var x in errors) { %>
            <h3><%= errors[x].message %></h3>
            <% } %>
        <% } %>
    </div>
</body>
</html>